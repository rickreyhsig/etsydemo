<div class="jumbotron">
  <h1>Handcrafts</h1><br /><br />
  <h2>Discover one-of-a-kind items.</h2>
</div>

<div class="center">
<h1>Listings</h1>

    <div class="row">
        <% @listings.each do |listing| %>
              <div class="col-md-3">
                    <%= link_to image_tag(listing.image_url(:thumb)), listing %>
                    <div class="caption">
                        <h3><%= listing.name %></h3>
                        <p><%= number_to_currency listing.price %></p>
                        <p><%= listing.user.name %></p>
                    </div>
              </div>
        <% end %>
    </div>

<br>

<% if (user_signed_in?) %>
    <%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
<% end %>
</div>
